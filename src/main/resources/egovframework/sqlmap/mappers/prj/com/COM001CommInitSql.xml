	<select id="retrieveCommInitListX" parameterType="map" resultType="egovMap">                   									
		/* COM001CommInitDAO.retrieveCommInitListX 공통코드 조회(없음) */
		<![CDATA[                                                													
			SELECT                                                  											                                                  											    
                   '0' AS CHK                    /*CHK*/        		                
                 , A.CMMN_CD  AS CLASS_ID  		 /*공통코드*/		
                 , A.CMMN_CD_NM  AS CLASS_ID_NM    /*공통코드명*/
                 , A.USE_YN           			 /*비고내역*/
                 , A.REMK_CTNT AS CD_DC            /*사용여부*/
                 , A.BF_CMMN_CD                   /*이전공통코드*/
                 , A.LAST_MODF_IP                /*최초입력자ID*/    
                 , A.LAST_MODF_MENU_ID           /*최초입력일시*/
                 , A.LAST_MODF_DT                /*최초입력메뉴ID*/
                 , A.LAST_MODF_ID                /*최초입력IP*/
                 , A.FRST_INPUT_IP               /*최종수정입력자ID*/
                 , A.FRST_INPUT_MENU_ID          /*최종수정일시*/
                 , A.FRST_INPUT_DT               /*최종수정메뉴ID*/
                 , A.FRST_INPUT_ID               /*최종수정IP*/
              FROM COM.CSYS100 A                                                                       							 
             WHERE 1=1        
		]]>                                                      												 
	</select> 
	
